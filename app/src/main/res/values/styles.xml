<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="regularFont">
        <item name="android:fontFamily">@font/yekan_bakh_regular</item>
        <item name="fontFamily">@font/yekan_bakh_regular</item>
    </style>

    <style name="boldFont">
        <item name="android:fontFamily">@font/yekan_bakh_bold</item>
        <item name="fontFamily">@font/yekan_bakh_bold</item>
    </style>

    <style name="logoStyle">
        <item name="android:src">@drawable/logo_helium_plus</item>
        <item name="android:layout_marginTop">48dp</item>
    </style>

    <style name="titleStyle" parent="boldFont">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="messageStyle" parent="regularFont">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="linkStyle" parent="boldFont">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary_400</item>
    </style>

    <style name="textInputLayoutStyle" parent="regularFont">
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:textColorHint">@color/white_op50</item>
        <item name="boxBackgroundColor">@color/white_op16</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxStrokeColor">@color/white</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="hintTextColor">@color/white_op60</item>
        <item name="startIconTint">@color/semi_white</item>
        <item name="hintTextAppearance">@style/tilTextAppearance</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="tilTextAppearance" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="textInputEditTextStyle" parent="regularFont">
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@color/white_op80</item>
    </style>

    <style name="materialButtonStyle" parent="boldFont">
        <item name="android:layout_marginTop">12dp</item>>
        <item name="android:layout_marginBottom">12dp</item>>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:backgroundTint">@color/primary_700</item>
        <item name="backgroundTint">@color/primary_700</item>
    </style>

    <style name="chipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="backgroundTint">@color/white_op16</item>
        <item name="android:backgroundTint">@color/white_op16</item>
        <item name="chipStrokeColor">@color/selector_chip_stroke</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="chipEndPadding">8dp</item>
        <item name="chipStartPadding">8dp</item>
        <item name="android:textAppearance">@style/regularFont</item>
    </style>

    <style name="littleChipStyle" parent="chipStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primary_200</item>
        <item name="android:textAppearance">@style/boldFont</item>
        <item name="android:checkable">false</item>
    </style>

    <style name="infoTextStyle" parent="boldFont">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/liteGray</item>
    </style>

    <style name="endVerticalGuideLine">
        <item name="layout_constraintGuide_percent">0.96</item>
    </style>

    <style name="startVerticalGuideLine">
        <item name="layout_constraintGuide_percent">0.04</item>
    </style>

    <!--Bottom Nav-->
    <style name="BottomNavStyle" parent="regularFont">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ShapeAppearance.Image.PILL" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="recyclerView">
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:clipToPadding">false</item>
    </style>

</resources>